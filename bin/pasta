#!/usr/bin/env bash

# taken from: https://codeberg.org/EvanHahn/dotfiles/src/commit/843b9ee13d949d346a4a73ccee2a99351aed285b/home/bin/bin/pasta
# https://evanhahn.com/scripts-i-wrote-that-i-use-all-the-time/

# pasta > file_from_my_clipboard.txt
# Open a file path from your clipboard
# vim "$(pasta)"
# Decode some base64 from the clipboard
#pasta | base64 --decode

set -e
set -u

if hash pbpaste 2>/dev/null; then
  exec pbpaste
elif hash xclip 2>/dev/null; then
  exec xclip -selection clipboard -o
elif [[ -e /tmp/clipboard ]]; then
  exec cat /tmp/clipboard
else
  echo ''
fi
