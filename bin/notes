#!/usr/bin/env bash

set -e
set -u
set -o pipefail

notes_dir="$HOME/Documents/notes"

if [[ "$#" == 0 ]]; then
    # no additional args given just cd dir
    cd "$notes_dir"
else
    # /* after variable as otherwise it treats the /* as a literal path
    grep --color=auto -r -E "$@" "$notes_dir"/*
fi
