# clear screen
alias cls="clear"

# git aliases
alias g="git"
alias ga="git add"
alias gc="git commit"
alias gs="git status"

# howto script
alias ht="$HOME/repos/ht-cli/howto.sh"

# task journal script
alias tj="$HOME/repos/task-journal/task-journal.sh"

# list hidden dirs
alias l.='ls -d .* --color=auto'

# grep history
# allows to search history with:
# gh "search term"
alias gh="history | grep"

# shortcut for mousepad on xubuntu
alias mp="mousepad"

# short cuts for neovim
alias nvi="nvim"
alias vi="vim"
